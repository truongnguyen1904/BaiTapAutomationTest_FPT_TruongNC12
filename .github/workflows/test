name: Build and Test .NET Framework App

on:
  push:
    branches: [ "master" ]
  pull_request:
    branches: [ "master" ]

jobs:
  build:
    runs-on: windows-latest

    steps:
    - name: Checkout source
      uses: actions/checkout@v4

    - name: Setup MSBuild
      uses: microsoft/setup-msbuild@v2

    - name: Restore NuGet packages
      run: nuget restore BaiTuanTuan3_NguyenChiTruong.sln

    - name: Build the solution
      run: msbuild BaiTuanTuan3_NguyenChiTruong.sln /p:Configuration=Release

    - name: Upload build output
      uses: actions/upload-artifact@v4
      with:
        name: BuildOutput
        path: |
          **\bin\Release\

    - name: Run Unit Tests
      run: |
        vstest.console.exe Tests\bin\Release\Tests.dll

